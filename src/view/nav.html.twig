<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container px-4 px-lg-5">
        {% if postDetails.id %}
            <a class="navbar-brand" href="../home">Marine S</a>
        {% else %}
            <a class="navbar-brand" href="./home">Marine S</a>
        {% endif %}

        <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ms-auto">
                {% if postDetails.id %}
                    <li class="nav-item"><a class="nav-link" href=".././posts">Posts</a></li>
                    <li class="nav-item"><a class="nav-link" href=".././home#projects">Projects</a></li>
                    <li class="nav-item"><a class="nav-link" href=".././contact">Contact</a></li>
                    {% if (session.user.role == "supadmin") %}
                        <li class="nav-item"><a class="nav-link" href=".././roles">Roles</a></li>
                    {% endif %}
                    {% if (session.user.role == "supadmin") or (session.user.role == "user") %}
                        <li class="nav-item"><a class="nav-link" href=".././validation">Validation</a></li>
                    {% endif %}
                {% else %}
                    <li class="nav-item"><a class="nav-link" href="./posts">Posts</a></li>
                    <li class="nav-item"><a class="nav-link" href="#projects">Projects</a></li>
                    <li class="nav-item"><a class="nav-link" href="./contact">Contact</a></li>
                    {% if (session.user.role == "supadmin") %}
                        <li class="nav-item"><a class="nav-link" href="./roles">Roles</a></li>
                    {% endif %}
                    {% if (session.user.role == "supadmin") or (session.user.role == "user") %}
                        <li class="nav-item"><a class="nav-link" href="./validation">Validation</a></li>
                    {% endif %}
                {% endif %}

                <li class="nav-item">
                    {% if (session.user.firstName) %}
                        <form id="disconnect" {% if postDetails.id %}action=".././login"{% else %}action="./login"{% endif %} method="post">
                            <input type="hidden" id="connectionAction" name="action" value="disconnect">

                            <div class="col-auto my-2 d-flex justify-content-end">
                                <button id="submitButton" class="btn btn-body" type="submit">
                                    <i class="fa-solid fa-power-off text-white"></i>
                                </button>
                            </div>
                        </form>
                    {% else %}
                            <div class="col-auto my-2 d-flex justify-content-end">
                                <a {% if postDetails.id %}href=".././login"{% else %}href="./login"{% endif %}>
                                    <button id="submitButton" class="btn btn-body" type="button">
                                        <i class="fa-solid fa-arrow-right-to-bracket text-white"></i>
                                    </button>
                                </a>
                            </div>
                    {% endif %}
                </li>
            </ul>
        </div>
    </div>
</nav>
